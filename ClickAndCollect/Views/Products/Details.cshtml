@model ClickAndCollect.ViewModels.OrderProductsViewModels;

<div class="text-center">
    <table class="table">
        <tr>
            <th>Nom</th>
            <th>Prix</th>

            @if ((string)TempData["State"] == "connected")
            {
                <th>Quantité</th>
            }
            </tr>
        @{

            foreach (Products p in Model.Products)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Prix</td>

                    @if ((string)TempData["State"] == "connected")
                    {
                        <form asp-controller="Products" asp-action="AddProduct" asp-route-NumProduct="@p.NumProduct" method="post">
                            <td><input asp-for="Nbr" /></td>
                            <td><input type="submit" /></td>
                        </form>
                    }
                </tr>
            }
        }

    </table>

</div>
