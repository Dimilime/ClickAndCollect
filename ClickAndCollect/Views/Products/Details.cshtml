@model List<Products>

<div class="text-center">
    <table class="table">
        <tr>
            <th>Nom</th>
        </tr>
        @{
            foreach (Products p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    @*Ajouter un moyen de mettre un nombre*@
                    <td><a asp-controller="Order" asp-action="AddProduct" asp-route-NumProduct="@p.NumProduct">Ajouter</a></td>
                </tr>
            }
        }

    </table>

</div>
