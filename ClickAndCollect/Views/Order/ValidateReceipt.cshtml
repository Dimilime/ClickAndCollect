@model Order

@if (Model != null)
{
    @if (!Model.Receipt)
    {
        <form asp-controller="Cashier" asp-action="DailyCustomer" method="post">
            <input type="hidden" asp-for="OrderId" value="@Model.OrderId" />
            <label asp-for="NumberOfBoxReturned"></label>
            <input asp-for="NumberOfBoxReturned" min="0" />
            <span asp-validation-for="NumberOfBoxReturned"></span>
            <label asp-for="Receipt"></label>
            <input asp-for="Receipt" />
            <span asp-validation-for="Receipt"></span>
            <input type="submit" />
        </form>
    }

}
else
{
    <h1>Erreur!!</h1>
    <p>@ViewData["Error"]</p>
}
<a asp-controller="Cashier" asp-action="DailyCustomer">Retour</a>