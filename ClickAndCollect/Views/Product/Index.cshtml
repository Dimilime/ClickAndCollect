@model List<Category>

<div class="alert-success divMsg">
    @TempData["AccountCreate"] 
    @TempData["SuccessOrder"]
</div>
<div class="alert-danger divMsg">
    
    @TempData["ErrorOrder"]
    @TempData["Error"]
</div>

<div class="text-center">
    <table class="table">
        <tr>
            <th>Catégories</th>
        </tr>
        
        @foreach (Category cat in Model)
        {
            <tr>
                <td>@cat.GetDisplayName()</td>
                
                <td><a asp-controller="Product" asp-action="Details" asp-route-category="@cat">details</a></td>
            </tr>
        }
    </table>

</div>
